{
  "name": "boost-ts",
  "version": "2.3.0",
  "description": "TypeScript Library to boost functional programming",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "test": "mocha --exit -r ts-node/register test/**/*.ts",
    "clean": "shx rm -rf dist",
    "publish": "npm run clean && npm run build && shx cp package.json README.md dist && cd dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wak109/boost-ts.git"
  },
  "keywords": [
    "typescript",
    "functional-programming"
  ],
  "author": "wak109 <wak109@gmail.com> (https://github.com/wak109)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wak109/boost-ts/issues"
  },
  "homepage": "https://github.com/wak109/boost-ts#readme",
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "mocha": "^11.1.0",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
